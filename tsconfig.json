{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "ES2022",
    "allowJs": false,
    "esModuleInterop": true,
    "noImplicitThis": false,
    "noImplicitAny": true,
    "strict": true,
    "strictFunctionTypes": false,
    "resolveJsonModule": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}